# Environment
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# Frontend origin(s) - comma-separated for multiple origins
FRONTEND_ORIGIN=http://localhost:5173,https://your-domain.com,https://musicr.app

# Database - Production PostgreSQL with connection pooling and SSL
# Use sslmode=require for production (Railway, AWS RDS, etc.)
# Use sslmode=disable only for local development without SSL
DATABASE_URL="postgresql://musicr_user:your_secure_password@localhost:5432/musicr_prod?schema=public&connection_limit=20&pool_timeout=20&sslmode=require"

# Security
COOKIE_SECRET=your-very-long-random-secret-key-here-min-32-chars

# OpenAI API key for song title generation
OPENAI_API_KEY=your_openai_api_key_here

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Logging
LOG_LEVEL=info