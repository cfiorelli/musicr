{
  "name": "musicr",
  "version": "1.0.0",
  "description": "A music-themed chat website where messages are converted to song titles",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently --prefix name --prefix-colors \"cyan,magenta\" \"pnpm --filter @musicr/api dev\" \"pnpm --filter @musicr/web dev\"",
    "dev:api": "nodemon --config apps/api/nodemon.json --exec pnpm --filter @musicr/api exec tsx src/index.ts",
    "build": "pnpm --filter @musicr/shared build && pnpm --filter @musicr/api build && pnpm --filter @musicr/web build",
    "lint": "pnpm --recursive lint",
    "test": "pnpm --recursive test",
    "clean": "pnpm --recursive clean",
    "postinstall": "pnpm --filter @musicr/shared build",
    "e2e": "pnpm --filter @musicr/api exec vitest run --reporter=dot test/e2e/",
    "api:ensure": "bash scripts/ensure-api.sh",
    "api:stop": "bash scripts/stop-api.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.5",
  "dependencies": {
    "nodemon": "^3.1.10"
  },
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.9",
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "lodash@>=4.0.0 <4.17.23": ">=4.17.23",
      "vite@>=5.2.6 <=5.4.20": ">=5.4.21",
      "js-yaml@>=4.0.0 <4.1.1": ">=4.1.1"
    }
  }
}